{
  "name": "angular-migration-tracker",
  "version": "1.0.0",
  "description": "Track AngularJS to React migration progress for Portainer",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:results": "pnpm run analyze:local && mv results.json public/results.json",
    "preview": "vite preview",
    "analyze": "tsx src/analyzer/analyze.ts",
    "analyze:local": "tsx src/analyzer/analyze.ts local",
    "analyze:github": "tsx src/analyzer/analyze.ts github",
    "typecheck": "tsc -b --noEmit",
    "lint": "oxlint --type-aware \"**/*.{ts,tsx}\"",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,css,md}\"",
    "posttest": "npm run format",
    "prepare": "husky install"
  },
  "packageManager": "pnpm@10.17.1",
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "@tailwindcss/vite": "^4.1.16",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "oxlint": "^1.29.0",
    "oxlint-tsgolint": "^0.7.1",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  },
  "lint-staged": {
    "*.{ts,tsx,css,md}": "prettier --write",
    "*.{ts,tsx}": "oxlint --type-aware"
  }
}
